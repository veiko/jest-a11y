.{{lowerCase componentName}} {
  --{{lowerCase componentName}}-background-color: var(--grey);
  --{{lowerCase componentName}}-color: var(--black);
}

html[data-theme='dark'] .{{lowerCase componentName}} {
  --{{lowerCase componentName}}-background-color: var(--grey);
  --{{lowerCase componentName}}-color: var(--white);
}