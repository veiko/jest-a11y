{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "dist",
    "strict": true,
    "target": "es2018"
  },
  "include": ["docs/**/*.tsx", "src/**/*.ts", "src/**/*.tsx", "src/types"]
}
